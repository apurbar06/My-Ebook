<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contribute">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_marginTop="40dp"
        android:orientation = "vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select graduation level"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp" />
        <Spinner
            android:id="@+id/cnb_spinner_graduation_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select course"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"/>
        <Spinner
            android:id="@+id/cnb_spinner_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select semester"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"/>
        <Spinner
            android:id="@+id/cnb_spinner_semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File Name"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/cnb_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHighlight="#A9090808"
            android:textColorLink="#AD090808"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/floatingActionButton"
                android:text="Attach file"
                android:textColor="#5C090808"
                android:textSize="15dp" />

            <ImageButton
                android:id="@+id/floatingActionButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_attach"
                android:clickable="true"
                android:onClick="onClickOpenFolder" />


        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_send"
        android:onClick="onClickSendEmail"
        tools:ignore="OnClick" />


</androidx.constraintlayout.widget.ConstraintLayout>